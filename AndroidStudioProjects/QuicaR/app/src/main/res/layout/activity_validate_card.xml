<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:background="@color/addCardBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_card_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/enter_card_info"
        android:contentDescription="@string/card_fragment"/>

    <EditText
        android:id="@+id/name_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="140dp"
        android:background="@null"
        android:inputType="text"
        android:hint="@null"/>

    <EditText
        android:id="@+id/card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginStart="75dp"
        android:background="@null"
        android:inputType="number"
        android:hint="@null"/>

    <EditText
        android:id="@+id/expiry_date"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:layout_marginStart="95dp"
        android:background="@null"
        android:inputType="date"
        android:hint="@null"/>

    <EditText
        android:id="@+id/ccv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:layout_marginStart="259dp"
        android:background="@null"
        android:inputType="number"
        android:hint="@null"/>

    <Button
        android:id="@+id/card_confirm"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/confirm_button" />

</RelativeLayout>