<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/white_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13sp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green2">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:alpha="0.2"
            android:background="@drawable/money_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="top">


                    <ImageView
                        android:id="@+id/money_image"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_money_invert"/>

                    <com.example.font.TextViewSFProDisplayMedium
                        android:id="@+id/payment_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:text="11.5" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start">

                    <LinearLayout
                        android:id="@+id/payee_layout"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.example.font.TextViewSFProDisplayRegular
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Payee:"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>

                        <com.example.font.TextViewSFProDisplaySemibold
                            android:id="@+id/payee_or_payer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lineSpacingExtra="2dp"
                            android:text="Payee: Kai"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.font.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Payment Date:"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <com.example.font.TextViewSFProDisplayMedium
                    android:id="@+id/payment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="11/11/1111"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>