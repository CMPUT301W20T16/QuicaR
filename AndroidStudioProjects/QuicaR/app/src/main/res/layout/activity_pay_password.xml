<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/password_enter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paymentBackground"
        app:correctStateColor="@android:color/holo_green_light"
        app:wrongStateColor="@android:color/holo_red_dark"
        app:numberTextColor="@android:color/darker_gray"
        app:passcodeLength="6"
        app:firstInputTip="Enter a password of 6 digits "/>


</RelativeLayout>