<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"

    android:background="@color/white"
    tools:context="com.example.quicar.RiderReviewActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="30dp"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1"/>




                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="8dp">



                        <LinearLayout
                            android:id="@+id/dark_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/green_rect"
                            android:orientation="vertical">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:scaleType="centerCrop"
                                    android:alpha="0.2"
                                    android:background="@drawable/cardmapbg"/>


                                <LinearLayout
                                    android:id="@+id/white_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="13sp"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">


                                            <com.example.font.TextViewSFProDisplayLight
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Ride with"
                                                android:textSize="11sp"
                                                android:textColor="@color/white"/>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <com.example.font.TextViewSFProDisplayMedium
                                                    android:id="@+id/car_type"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="@color/white"
                                                    android:textSize="12sp"
                                                    android:text="Ferrari F450*******"/>


                                                <ImageView
                                                    android:id="@+id/car_image"
                                                    android:layout_width="35dp"
                                                    android:layout_height="15dp"
                                                    android:src="@drawable/ic_car"/>
                                            </LinearLayout>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_weight="0.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.example.font.TextViewSFProDisplayRegular
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Total Time"
                                                android:textSize="10sp"
                                                android:textColor="@color/white"/>

                                            <com.example.font.TextViewSFProDisplayMedium
                                                android:id="@+id/total_time"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/white"
                                                android:textSize="11.5sp"
                                                android:text="20min"/>
                                        </LinearLayout>

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="22sp"
                                        android:layout_marginLeft="7dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="horizontal">


                                        <com.example.font.TextViewSFProDisplaySemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total Fare: "
                                            android:lineSpacingExtra="2dp"
                                            android:textSize="15sp"
                                            android:textColor="@color/white"/>

                                        <com.example.font.TextViewSFProDisplaySemibold
                                            android:id="@+id/total_fare"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$13.8"
                                            android:lineSpacingExtra="2dp"
                                            android:textSize="15sp"
                                            android:textColor="@color/white"/>
                                    </LinearLayout>
                                </LinearLayout>





                            </FrameLayout>



                        </LinearLayout>

                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="23dp"
                            android:orientation="horizontal">


                            <com.example.font.TextViewSFProDisplayMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#545454"
                                android:textSize="14sp"
                                android:text="Trip Details : "/>


                            <com.example.font.TextViewSFProDisplayMedium
                                android:id="@+id/today_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3/311/2020"
                                android:textSize="14sp"
                                android:textColor="#1072c6"/>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7sp"
                            android:background="#f1f1f1"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <com.example.font.TextViewSFProDisplayMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_marginLeft="27dp"
                                android:text="From"
                                android:layout_marginTop="18dp"/>

                            <com.example.font.TextViewSFProDisplayMedium
                                android:id="@+id/start_adress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10811 47 avenue, nw, Edmonton"
                                android:textSize="12sp"
                                android:letterSpacing="0.0165"
                                android:textColor="#545454"
                                android:layout_marginLeft="28dp"
                                android:layout_marginTop="10sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12sp"
                                android:background="#f1f1f1"/>


                            <com.example.font.TextViewSFProDisplayMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_marginLeft="27dp"
                                android:text="To"
                                android:layout_marginTop="15dp"/>

                            <com.example.font.TextViewSFProDisplayMedium
                                android:id="@+id/end_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10899 23 avenue, nw, Edmonton"
                                android:textSize="12sp"
                                android:layout_marginLeft="28dp"
                                android:textColor="#545454"
                                android:layout_marginTop="10sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="14sp"
                                android:background="#f1f1f1"/>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20sp"
                            android:background="#f1f1f1"/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/white">


                            <ImageView
                                android:id="@+id/car"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/car"/>


                            <com.example.font.TextViewSFProDisplaySemibold
                                android:id="@+id/rating_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginStart="16dp"
                                android:layout_toEndOf="@+id/car"
                                android:text="Select the tip rate"
                                android:background="@drawable/green_rect"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/tip_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100% paid to the driver"
                                android:layout_above="@+id/amount_group"
                                android:layout_alignEnd="@+id/tip_rate"
                                android:textSize="14sp"/>

                            <RadioGroup
                                android:id="@+id/tip_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@+id/rating_button"
                                android:layout_toEndOf="@+id/car"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/eight_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8%"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <RadioButton
                                    android:id="@+id/ten_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10%"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <RadioButton
                                    android:id="@+id/fifteen_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <RadioButton
                                    android:id="@+id/other"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="other"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:id="@+id/enter_rate"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:popupBackground="@color/white"
                                    android:dropDownWidth="wrap_content"
                                    android:textSize="14sp"
                                    android:visibility="invisible" />

                            </RadioGroup>


                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>




    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu_rider"/>


</androidx.drawerlayout.widget.DrawerLayout>
