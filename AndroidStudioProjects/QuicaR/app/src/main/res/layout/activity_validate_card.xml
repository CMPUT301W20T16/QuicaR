<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/addCardBackground"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mastercard" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_visa" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_american_express" />
            </LinearLayout>



            <com.example.font.TextViewSFProDisplayMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/cart_details"
                android:textSize="17sp"
                android:gravity="center"/>


            <com.example.font.TextViewSFProDisplayRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verify_or_complete_your_card_information"
                android:textSize="12sp"
                android:textColor="#8e8e93"
                android:gravity="center"
                android:layout_marginTop="5dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <com.example.font.TextViewSFProDisplayMedium
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Name On Card"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/name_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/paymentBackground"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#f1f1f1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <com.example.font.TextViewSFProDisplayMedium
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Card Number"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_num"
                        android:layout_marginStart="11dp"
                        android:textSize="14sp"
                        android:textColor="@color/paymentBackground"
                        android:inputType="number"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#f1f1f1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20sp"
                        android:orientation="horizontal">

                        <com.example.font.TextViewSFProDisplayMedium
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Expiry Date"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/expiry_date"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:inputType="date"
                            android:textColor="@color/paymentBackground"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="17dp"
                        android:orientation="horizontal">

                        <com.example.font.TextViewSFProDisplayMedium
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="CCV"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/ccv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:textColor="@color/paymentBackground"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#f1f1f1"/>

                <Button
                    android:id="@+id/card_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/confirm_button" />

            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>







</LinearLayout>