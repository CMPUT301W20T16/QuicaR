<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quicar_mapview">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key"/>

        <activity android:name="com.example.quicar.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.quicar.UserProfileActivity"
            android:parentActivityName="com.example.quicar.RiderRequestActivity">
        </activity>

        <activity android:name="com.example.quicar.RiderRequestActivity"
            android:parentActivityName="com.example.quicar.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.example.quicar.RiderSelectLocationActivity" />
        <activity android:name="com.example.quicar.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.quicar.RiderConfirmRiderActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.quicar.RiderWaitingRideActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.quicar.DriverBrowsingActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>