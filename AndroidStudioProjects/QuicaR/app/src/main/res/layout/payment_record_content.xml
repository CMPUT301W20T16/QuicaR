<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/white_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13sp"
    android:orientation="vertical"
    android:background="@drawable/green_rect">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:alpha="0.2"
            android:background="@drawable/money_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="7dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.font.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Amount"
                    android:textSize="11sp"
                    android:textColor="@color/white"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.example.font.TextViewSFProDisplayMedium
                        android:id="@+id/payment_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="$11.5" />


                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="35dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_money_invert"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginRight="7dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.font.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Date"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <com.example.font.TextViewSFProDisplayMedium
                    android:id="@+id/payment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="11/11/1111"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.font.TextViewSFProDisplaySemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="Payee: "
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <com.example.font.TextViewSFProDisplaySemibold
                    android:id="@+id/payee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="AAAAA"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.font.TextViewSFProDisplaySemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="Payer: "
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <com.example.font.TextViewSFProDisplaySemibold
                    android:id="@+id/payer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="BBBBB"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>



        </LinearLayout>

    </FrameLayout>




</LinearLayout>