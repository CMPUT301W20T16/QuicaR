<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/bottom_sheet_driver_on_going"
    app:behavior_hideable="true"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginStart="148dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_checked"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.font.TextViewSFProDisplayRegular
                android:id="@+id/start_address"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:text="PICK UP LOCATION"
                android:textSize="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_checked"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.font.TextViewSFProDisplayRegular
                android:id="@+id/end_address"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:text="DESTINATION"
                android:textSize="9dp"
                app:layout_constraintStart_toEndOf="@+id/start_address"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:layout_width="147dp"
                android:layout_height="61dp"
                android:layout_marginTop="12dp"
                android:text="--------------"
                android:textColor="#882C383E"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/splash"
                    app:civ_border_color="@color/paymentBackground"
                    app:civ_border_width="2dp" />

                <com.example.font.TextViewSFProDisplaySemibold
                    android:id="@+id/userName_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:letterSpacing="0.0265"
                    android:text="Some Name"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal">


                    <com.example.font.TextViewSFProDisplayMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.example.font.TextViewSFProDisplayRegular
                        android:id="@+id/userEmail_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:text="sampleEmail@gmail.com"
                        android:textColor="#5a595e"
                        android:textSize="14sp" />

                    <com.example.font.TextViewSFProDisplayRegular
                        android:id="@+id/email_rider_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="EMAIL RIDER"
                        android:clickable="true"
                        android:textColor="@color/paymentBackground"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal">


                    <com.example.font.TextViewSFProDisplayMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone Number"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.example.font.TextViewSFProDisplayRegular
                        android:id="@+id/userPhone_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.9"
                        android:text="5872255201"
                        android:textColor="#5a595e"
                        android:textSize="14sp" />

                    <com.example.font.TextViewSFProDisplayRegular
                        android:id="@+id/call_rider_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="CALL RIDER"
                        android:clickable="true"
                        android:textColor="@color/paymentBackground"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="#f1f1f1" />


            <com.example.font.TextViewSFProDisplayRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="15dp"
                android:letterSpacing="0.0325"
                android:lineSpacingExtra="2dp"
                android:text="Some instruction for driver ***************** incomplete"
                android:textColor="#838383"
                android:textSize="12.5sp" />


        </LinearLayout>

        <com.example.font.Button_SF_Pro_Display_Medium
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rect"
            android:text="Confirm Pick Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>



</RelativeLayout>
