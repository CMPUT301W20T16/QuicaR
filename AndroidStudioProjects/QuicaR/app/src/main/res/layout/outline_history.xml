<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/white_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13sp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:alpha="0.2"
            android:background="@drawable/cardmapbg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.font.TextViewSFProDisplayRegular
                    android:id="@+id/rider_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rider#: "
                    android:textSize="12sp"
                    android:textColor="@color/white"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.example.font.TextViewSFProDisplayMedium
                        android:id="@+id/driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Driver: Basu Anup" />


                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="35dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_car"/>
                </LinearLayout>

                <com.example.font.TextViewSFProDisplaySemibold
                    android:id="@+id/start_location"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="From: Beijing"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <com.example.font.TextViewSFProDisplaySemibold
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:lineSpacingExtra="2dp"
                    android:text="To: Shanghai"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <com.example.font.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Travel Date:"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <com.example.font.TextViewSFProDisplayMedium
                    android:id="@+id/travel_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="2016/04/25"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>